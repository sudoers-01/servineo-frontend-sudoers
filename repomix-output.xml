  tokenUsuario: string,
  tokenGoogle: string,
): Promise<GoogleLinkResult> {
  try {
    const res = await fetch(`${process.env.NEXT_PUBLIC_API_URL}/api/controlC/cliente/link-google`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
