    title: '',
    message: '',
  });

  const [filter, setFilter] = useState<JobStateFilter>('active');
  const [openMenuId, setOpenMenuId] = useState<string | null>(null);
  const [isCreatePromoModalOpen, setIsCreatePromoModalOpen] = useState(false);
