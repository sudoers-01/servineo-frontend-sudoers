    <button
      onClick={() => onSelectDate(date)}
      className={`
        relative flex items-center justify-center w-10 h-10 mx-auto rounded-full 
        select-none font-medium cursor-pointer 
        ${colorControl()} ${todayRing}`}
    >
      <span>{dayNumber}</span>
